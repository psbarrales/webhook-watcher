{
  "name": "simple-api",
  "version": "1.0.0",
  "description": "Simple API",
  "main": "dist/index.js",
  "author": "psbarrales@gmail.com",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json && npm run copy:assets",
    "copy:assets": "cp -r src/graphql/*/*.graphql dist/graphql/ 2>/dev/null || true",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint \"{src,__tests__,__mocks__}/**/*.ts\"",
    "lint:fix": "eslint --fix \"{src,__tests__,__mocks__}/**/*.ts\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "start": "node dist/index.js",
    "prod": "npm run build && npm run start",
    "prepare": "husky install",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.5.7",
    "@graphql-tools/load": "^8.1.2",
    "@graphql-tools/schema": "^9.0.17",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.0",
    "better-sqlite3": "^12.4.6",
    "dotenv": "^16.4.5",
    "glob": "^9.3.5",
    "graphql": "^15.8.0",
    "helmet": "^7.1.0",
    "koa": "^2.14.2",
    "koa-body": "^6.0.1",
    "koa-compress": "^5.0.1",
    "koa-convert": "^2.0.0",
    "koa-graphql": "^0.12.0",
    "koa-helmet": "^7.0.2",
    "koa-logger": "^3.2.1",
    "koa-qs": "^3.0.0",
    "koa-send": "^5.0.1",
    "koa-views": "^8.0.0",
    "koa2-swagger-ui": "^5.8.1",
    "nunjucks": "^3.2.4",
    "prom-client": "^15.1.1",
    "queue": "^6.0.2",
    "swagger-jsdoc": "^6.2.8",
    "tsc-alias": "^1.8.8",
    "typescript": "5.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@types/jest": "^29.5.12",
    "@types/koa": "^2.13.8",
    "@types/koa-helmet": "^6.0.3",
    "@types/koa-logger": "^3.1.4",
    "@types/koa-send": "^4.1.3",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1"
  },
  "resolutions": {
    "strip-ansi": "6.0.1"
  }
}
